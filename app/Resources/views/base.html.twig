<!DOCTYPE html>
<html>
<head>
    {% block stylesheet_libs %}
        {% stylesheets filter='cssrewrite' output='compiled/css/style_libs.css'
        '@bootstrap'
        '@font_awesome'
        '@jquery_ui_datepciker_css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}

    {% block stylesheets %}
        {% stylesheets filter='cssrewrite' output='compiled/css/style_compiled.css'
            'css/style.css' %}
            <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="icon" type="image/png" href="{{ asset('favicon-32x32.png') }}" sizes="32x32"/>
    <link rel="icon" type="image/png" href="{{ asset('favicon-16x16.png') }}" sizes="16x16"/>

    <meta name="viewport" content="width=360"/>
    <meta charset="UTF-8"/>

    <title>Feedback App</title>
</head>

<body class="{% if container_class is defined %}{{ container_class }}{% endif %}">
{% block body %}
    <!-- header -->
    {% block header %}
        <header class="col-md-12">
            {{ include('::header.html.twig') }}
        </header>
    {% endblock %}

    <!-- end header -->

    <!-- content -->
    <section>
        {% block content %}
        {% endblock %}
    </section>
    <!-- end content -->

    <!-- footer -->

    {% block footer %}
        <footer class="page-footer font-small cyan darken-4 pt-4 mt-4">
            {{ include('::footer.html.twig') }}
        </footer>
    {% endblock %}


    <!-- end footer -->
{% endblock %}

{% block javascript_libs %}
    {% javascripts output='compiled/js/libs.js' filter="?jsqueeze"
        '@jquery'
        '@jquery_validate'
        '@bootstrap_js'
        '@jquery_ui_datepicker'
    %}
    <script src="{{ asset_url }}"></script>

{% endjavascripts %}

{% endblock %}

{% block javascripts %}
{% endblock %}
</body>
</html>
