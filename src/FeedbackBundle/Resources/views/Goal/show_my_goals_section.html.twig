{% if goals|length %}
  <div class="active-goal">
    <h2>My active goals <strong>({% if goals|length > 1 %}{{ goals|length }} active goals){% endif %}</strong></h2>

        {% for goal in goals %}
            <div class="goal-element">
                {{ goal.title }}
                <div class="progress">
                        <div style="width: {{ goal.progress }}%;" class="progress-bar {% if goal.progress == 100 %}{{ 'bg-success' }}{% endif %}"
                             role="progressbar" aria-valuenow="{{ goal.progress }}" aria-valuemin="0" aria-valuemax="100">{{ goal.progress }}%</div>
                </div>
            </div>
        {% endfor %}
  </div>
{% else %}
  <div class="alert alert-danger" role="alert">
    There are no active goals set!
  </div>
{% endif %}